@page "/information/infographic/{Id:string}"
@using UnitedSystemsCooperative.Web.ClientLib.Information.Models

<MudContainer MaxWidth="MaxWidth.Large">
    @if (_infographic == null)
    {
        <MudText Align="Align.Center">Image not found</MudText>
    }
    else
    {
        <MudText Typo="Typo.h3" Align="Align.Center">@_infographic.Title</MudText>
        <MudImage Src="@_infographic.ImgPath" Alt="@_infographic.Title"/>
    }
</MudContainer>

@code {
    [Parameter]
    public string? Id { get; set; }

    private InfographicData? _infographic;

    protected override void OnParametersSet()
    {
        
        base.OnParametersSet();
    }

}