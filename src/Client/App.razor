@using System.Reflection
<Router
    AppAssembly="@typeof(App).Assembly"
    AdditionalAssemblies="@_additionalAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <NotFoundComponent/>
        </LayoutView>
    </NotFound>
</Router>

@code {

    private readonly Assembly[] _additionalAssemblies =
    {
        typeof(ClientLib.About.Component1).Assembly,
        typeof(ClientLib.Admin.Component1).Assembly,
        typeof(ClientLib.Information.Index).Assembly,
        typeof(ClientLib.Massacre.Component1).Assembly,
        typeof(ClientLib.ShipBuilds.Component1).Assembly
    };

}